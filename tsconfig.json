{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src",              // Only source files under src/
    "outDir": "dist",              // Output directory for compiled files
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],        // Only include src/ for compilation
  "exclude": ["node_modules", "tests/**/*"]  // Explicitly exclude tests
}